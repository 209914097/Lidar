<Window x:Class="LayoutExamples.DockPanels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IPExchange" Height="300" Width="300" Icon="ICO/NET.ico">
    <Grid >
        <Button HorizontalAlignment="Left" Margin="35,84,0,0" VerticalAlignment="Top" Width="91" Click="DHCP_Click" Height="104">
            <StackPanel Orientation="Vertical">
                <Image HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Source="PNG/DHCP.png" Stretch="UniformToFill"/>
                <TextBlock TextAlignment="Center">DHCP</TextBlock>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Right" Margin="0,84,35,0" VerticalAlignment="Top" Width="91" Click="Static_Click" Height="104">
            <StackPanel Orientation="Vertical">
                <Image HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Source="PNG/WLAN.png" Stretch="UniformToFill" />
                <TextBlock TextAlignment="Center">192.168.1.102</TextBlock>
            </StackPanel>
        </Button>

    </Grid >
</Window>
